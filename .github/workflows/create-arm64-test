# This is a basic workflow to help you get started with Actions

name: Create arm64 release test

# Controls when the workflow will run
on:
  # Triggers the workflow on push or pull request events but only for the "main" branch
  #push:
  #  tags: [ "v*" ]

  # Allows you to run this workflow manually from the Actions tab
  workflow_dispatch:

# A workflow run is made up of one or more jobs that can run sequentially or in parallel
jobs:
  build_al2023:
    # The type of runner that the job will run on
    runs-on: ubuntu-latest

    # Steps represent a sequence of tasks that will be executed as part of the job
    steps:
      # Checks-out your repository under $GITHUB_WORKSPACE, so your job can access it
      - name: Checkout code
        uses: actions/checkout@v4

      #- name: Set up Docker Buildx
      #  uses: docker/setup-buildx-action@v3

      #- name: Set up QEMU
      #  uses: docker/setup-qemu-action@v3

      - name: Build the tagged Docker image
        with:
          arch: aarch64
          distro: ubuntu-latest
        run: docker build . --file ./docker/Dockerfile.amazonlinux --tag amazonlinux2023 --build-arg VERSION_NUM="2023"

      - name: "Compile Amazon Linux 2023 (arm64)"
        with:
          arch: aarch64
          distro: ubuntu-latest
        run: |
          docker run --rm -v ${{ github.workspace }}/output:/data/amzn2023/RPMS/aarch64 amazonlinux2023

      - uses: actions/upload-artifact@v4
        with: 
          name: al2023-arm64
          path: ${{ github.workspace }}/output


  
  create_release:
    needs:
      - build_al2023
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - uses: actions/download-artifact@v4
        with:
          name: al2023-arm64
          path: ./output

      - name: Get tag message
        run: |
          echo -e "> Automated release created by GitHub Actions.\n" > ${{ github.workspace }}/RELEASE.md
          echo "$(date +"%Y.%m.%d-%H%M")" >> ${{ github.workspace }}/RELEASE.md
 
      - name: Create Release
        id: create_release
        uses: ncipollo/release-action@v1
        with:
          artifacts: "${{ github.workspace }}/output/*"
          bodyFile: ${{ github.workspace }}/RELEASE.md
          token: ${{ secrets.GITHUB_TOKEN }}
          allowUpdates: true
